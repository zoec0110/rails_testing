root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[app/{assets,views}/**/*.{js,jsx,js.erb,html,html.erb,css,scss}]
end_of_line = lf
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[app/javascript/**/*.{js,jsx,js.erb,html,html.erb,css,scss}, {.eslintrc.js}]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
